<div class="order-header">
  <div class="header-left">
    <%= image_tag "washstep.png", alt: "WashStep Logo", class: "washstep-logo" %>
  </div>
  <div class="header-center">
    <h1>Daftar Order</h1>
  </div>
</div>

  <div class="order-actions">
    <%= link_to "Tambah Order Baru", new_order_path, class: "add-order-btn" %>
  </div>

  <table class="order-table">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Shoe</th>
        <th>Service</th>
        <th>Status</th>
        <th>Total Harga</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% if @orders.present? %>
        <% @orders.each do |order| %>
          <tr class="<%= 'done' if order.status == 'Selesai' %>">
            <td><%= order.customer&.name || "-" %></td>
            <td>
              <% if order.shoe %>
                <%= "#{order.shoe.brand} (#{order.shoe.size}) - #{order.shoe.material}, #{order.shoe.condition}" %>
              <% else %>
                -
              <% end %>
            </td>
            <td>
              <% if order.service %>
                <%= "#{order.service.name} - #{number_to_currency(order.service.price, unit: 'Rp ', delimiter: '.', precision: 0)}" %>
              <% else %>
                -
              <% end %>
            </td>
            <td><%= order.status || "Proses" %></td>
            <td><%= number_to_currency(order.total_price || 0, unit:"Rp ", delimiter:".", precision:0) %></td>
            <td class="aksi">
              <%= link_to "Detail", order_path(order), class: "btn detail" %>
              <%= link_to "Edit", edit_order_path(order), class: "btn edit" %>
              <%= link_to "Hapus", order_path(order), method: :delete, data: { confirm: "Yakin hapus?" }, class: "btn hapus" %>
              <% if order.status != "Selesai" %>
                <%= button_to "Selesai", finish_order_path(order), method: :patch, data: { confirm: "Tandai order ini selesai?" }, class: "btn selesai" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6" class="no-data">Belum ada order.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
