<div class="order-container">

  <!-- Header -->
  <div class="order-header">
    <div class="header-left">
      <%= image_tag "washstep.png", alt: "WashStep Logo", class: "washstep-logo" %>
    </div>
    <div class="header-center">
      <h1>Daftar Order</h1>
    </div>
  </div>

  <!-- Tabel daftar order -->
  <table class="order-table">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Shoe</th>
        <th>Service</th>
        <th>Status</th>
        <th>Total Harga</th>
        <th>Aksi</th>
      </tr>
    </thead>

    <tbody>
      <% if @orders.present? %>
        <% @orders.each do |order| %>
          <tr class="<%= 'done' if order.status == 'Selesai' %>">
            <!-- Nama Customer -->
            <td><%= order.customer&.name || "-" %></td>

            <!-- Nama Sepatu -->
            <td><%= order.shoe_name.present? ? order.shoe_name : "-" %></td>

            <!-- Service dan Harga -->
            <td>
              <% if order.service %>
                <%= "#{order.service.name} - #{number_to_currency(order.service.price, unit: 'Rp ', delimiter: '.', precision: 0)}" %>
              <% else %>
                -
              <% end %>
            </td>

            <!-- Status -->
            <td><%= order.status || "Proses" %></td>

            <!-- Total Harga -->
            <td><%= number_to_currency(order.total_price || 0, unit: "Rp ", delimiter: ".", precision: 0) %></td>

            <!-- Tombol Aksi -->
            <td class="aksi">
              <%= link_to "Detail", order_path(order), class: "btn detail" %>
              <%= link_to "Edit", edit_order_path(order), class: "btn edit" %>
              <%= button_to "Hapus", order_path(order), method: :delete, data: { turbo_confirm: "Yakin hapus?" }, class: "btn hapus" %>

              <% if order.status != "Selesai" %>
                <%= button_to "Selesai", finish_order_path(order), method: :patch, data: { confirm: "Tandai order ini selesai?" }, class: "btn selesai" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6" class="no-data">Belum ada order.</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Tombol tambah order di bawah tabel -->
  <div class="order-actions bottom">
    <%= link_to "Tambah Order Baru", new_order_path, class: "add-order-btn" %>
  </div>

</div>
